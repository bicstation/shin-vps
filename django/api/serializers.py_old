class UserSerializer(serializers.ModelSerializer):
    """
    ã‚«ã‚¹ã‚¿ãƒ ãƒ¦ãƒ¼ã‚¶ãƒ¼æƒ…å ±ã®ã‚·ãƒªã‚¢ãƒ©ã‚¤ã‚¶
    Next.jsã®ãƒã‚¤ãƒšãƒ¼ã‚¸ã€ã‚µã‚¤ãƒ‰ãƒãƒ¼ã®æ¨©é™åˆ¤å®šã€ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«è¡¨ç¤ºã«ä½¿ç”¨
    ğŸ’¡ ä¿®æ­£ç‚¹: ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã®æ›¸ãè¾¼ã¿å°‚ç”¨è¨­å®šã¨ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³ã‚’è¿½åŠ 
    """
    password = serializers.CharField(write_only=True, required=False, style={'input_type': 'password'})

    class Meta:
        model = User
        fields = (
            'id', 
            'username', 
            'email', 
            'password',         # æ›¸ãè¾¼ã¿æ™‚ã®ã¿ä½¿ç”¨
            'site_group',       # ä¸€èˆ¬ / ã‚¢ãƒ€ãƒ«ãƒˆ
            'origin_domain',    # åŒæœŸå…ƒãƒ‰ãƒ¡ã‚¤ãƒ³
            'status_message',   # ä¸€è¨€ã‚³ãƒ¡ãƒ³ãƒˆ
            'profile_image', 
            'bio', 
            'is_staff',         # ã‚µã‚¤ãƒ‰ãƒãƒ¼ã®ç®¡ç†ãƒªãƒ³ã‚¯è¡¨ç¤ºåˆ¤å®šã«ä½¿ç”¨
            'is_superuser', 
            'date_joined'
        )
        # æ¨©é™æ˜‡æ ¼ãªã©ã¯APIçµŒç”±ã§ã¯å®‰æ˜“ã«è¡Œã‚ã›ãªã„ãŸã‚ read_only ã«è¨­å®š
        read_only_fields = ('id', 'is_staff', 'is_superuser', 'date_joined')

    def create(self, validated_data):
        """
        ãƒ¦ãƒ¼ã‚¶ãƒ¼ä½œæˆæ™‚ã«ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã‚’ãƒãƒƒã‚·ãƒ¥åŒ–ã—ã¦ä¿å­˜ã™ã‚‹ãŸã‚ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ©ã‚¤ãƒ‰
        """
        password = validated_data.pop('password', None)
        user = super().create(validated_data)
        if password:
            user.set_password(password)
            user.save()
        return user

