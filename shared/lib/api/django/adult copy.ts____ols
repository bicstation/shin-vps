 */
export async function getPlatformAnalysis(source: string, params: any = {}): Promise<any | null> {
    const queryParams = new URLSearchParams({ 
        source: source.toUpperCase() 
    });

    // æ¸¡ã•ã‚ŒãŸå…¨ã¦ã®ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ (maker_id, mode, etc.) ã‚’ã‚¯ã‚¨ãƒªã«è¿½åŠ 
    Object.keys(params).forEach(key => {
        if (params[key]) queryParams.append(key, String(params[key]));
    });

    const url = resolveApiUrl(`/api/adult-products/analysis/?${queryParams.toString()}`);
    console.log(`ğŸ“Š [ANALYSIS] Fetching market classification from: ${url}`);

    try {
        const res = await fetch(url, { 
            headers: getDjangoHeaders(), 
            next: { revalidate: 3600 } 
        });

        if (!res.ok) {
            console.warn(`âš ï¸ [ANALYSIS] API response not OK: ${res.status}`);
            return null;
        }

        const data = await res.json();
        return data;
    } catch (e) {
        console.error("âŒ [ANALYSIS ERROR] Failed to fetch market analysis:", e);
        return null;
    }
}

