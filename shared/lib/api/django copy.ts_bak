export async function fetchPCProductDetail(unique_id: string): Promise<PCProduct | null> {
    // ğŸ’¡ Djangoå´ã®ãƒ«ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ã«åˆã‚ã›ã¦ã‚¹ãƒ©ãƒƒã‚·ãƒ¥ã‚’å‰Šé™¤
    const url = resolveApiUrl(`/api/pc-products/${unique_id}`); 

    try {
        const res = await fetch(url, { 
            headers: getDjangoHeaders(), 
            cache: 'no-store' 
        });

        const data = await handleResponseWithDebug(res, url);

        // ğŸš¨ ãƒ‡ãƒ¼ã‚¿ãŒä¸æ­£ã€ã¾ãŸã¯ã‚¨ãƒ©ãƒ¼ã€ã¾ãŸã¯HTMLãƒ¬ã‚¹ãƒãƒ³ã‚¹ã®å ´åˆã¯ null ã‚’è¿”ã™
        if (!data || data._error || data.isHtml || !data.unique_id) {
            return null;
        }

        return data as PCProduct;
    } catch (e: any) {
        console.error(`[fetchPCProductDetail] Critical Failure: ${e.message}`);
        return null;
    }
}

